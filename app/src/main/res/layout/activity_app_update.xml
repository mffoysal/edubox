<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".update.AppUpdate">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="26sp"
        android:layout_height="wrap_content"
        android:text="App Update Available" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lavender"
        android:text="Update App" />

    <Button
        android:id="@+id/updateButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Alternate" />
    <Button
        android:id="@+id/updateButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/lavenda"
        android:backgroundTint="@color/lavenda"
        android:text="Edubox Applications" />
</LinearLayout>
